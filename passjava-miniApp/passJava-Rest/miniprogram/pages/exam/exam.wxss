/* pages/analysis/index.wxss */

page {
  overflow-x: hidden;
}

.loading {
  height: 50rpx;
  width: 50rpx;
  margin-top: 60%;
  margin-left: 47%;
}

.no-exam-questions {
  display: flex;
  flex-direction: column;
  margin-top: 200rpx;
}

.no-exam-questions-image {
  height: 400rpx;
  width: 400rpx;
  margin: auto;
}
.no-exam-questions-text {
  margin: auto;
}

.header-bar {
  padding:5%;
  display: flex;
}
.my-answer {
  font-weight: bold;
  color:rgb(30, 184, 255)
}

.last-answer {
  font-weight: bold;
  color:rgba(33, 211, 235, 0.76)
}
.right-answer {
  font-weight: bold;
  color:#3D971C
}

.radio-group {
    border-bottom: 1px solid #ddd;
}
.radio {
    display: block;
    border-top: 1px solid #ddd;
    padding: 5px;
}

.answer-card-bar {
  background: #fff;
  position: fixed;
  bottom: 0px;
  width: 100%;
  box-shadow:2px 2px 10px #78E4CC;
  z-index:1001;
  margin-bottom:5%;
}

.answer-card-status {
  width:100%;
  display:flex;
  margin-bottom:20rpx;
  justify-content:center;
  align-content:center;
  align-items:center;
  justify-items:center;
}


.answer-card-status-text-right {
  padding-right:20rpx;
  color: green;
}

.answer-card-status-text-wrong {
  padding-right:20rpx;
  color: red;
}

.answer-card-status-text-not-fininshed {
  padding-right:20rpx;
  color: blue;
}

.answer-card-status-text-accuracy-rate {
  padding-right:20rpx;
  color: rgb(255, 153, 0);
}

.answer-card {
  display:flex;
  flex-flow:wrap;
  z-index: 1000;
  margin-top: 10rpx;
  position:absolute;
  top:20%;
  background-color:#eff;
  margin-bottom:20%;
  width:100%;
}

.answer-card-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  background-color: rgba(0, 0, 0, .5);
  z-index: 100;
}

.answer-card-item {
  display:flex;
  flex-flow:wrap;
  z-index: 1000;
  padding-top: 10rpx;
  padding-left: 18rpx;
  background-color:#eff;
  padding-bottom:200rpx;
  width:100%;
}

.answer-card-footer {
  height: 100rpx;
}

.circle-right-answer {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: rgba(83, 224, 83, 0.37);
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-content:center;
  align-items:center;
}

.circle-wrong-answer {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: rgba(240, 49, 49, 0.541);
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-content:center;
  align-items:center;
}

.circle-not-choose {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: rgba(16, 78, 87, 0.171);
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-content:center;
  align-items:center;
}

.right-answer-image {
  width:45rpx;
  height:45rpx;
}
.space {
  height: 200rpx;
  width: 100%;
}

button::after {
  border: none;
}

.i-action-header {
  padding: 6px;
  text-align: left;
  padding-bottom:20%;
}

.i-action-header-left {
  text-align: left;
  font-size: 14px;
}

.i-action-header-left>text {
  margin-right: 8px;
}

.i-action-header-left>text>text {
  font-weight: bold;
}

.i-action-header-r {
  display: flex;
  justify-content: right;
  align-items: right;
}

.i-action-header-r>button {
  margin: 0px;
  flex: 1;
  right: 0px;
  width: 60px;
  height: 24px;
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  user-select: none;
  font-size: 14px;
  border-radius: 2px;
  border: 0 !important;
  position: relative;
  text-decoration: none;
  line-height: 24px;
  box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.1);
  color: #fff !important;
  background: #ff9c5e !important;
}

input {
  outline: none;
  border: none;
  list-style: none;
}

.header-model2 {
  padding: 12px 8px;
  position: relative;
}

.col-class {
  text-align: center;
}

.col-class-down {
  text-align: center;
}

.col-class-sub {
  position: absolute;
  left: 76%;
}

.header-btn {
  float: right;
  height: 20px !important;
  line-height: 20px !important;
  margin: 0px !important;
}

.btn-text {
  vertical-align: middle;
}

.model2-timepiece {
  border: 1px solid #2db7f5;
  border-radius: 5px;
  padding: 5px 6px;
}

.btn-save {
  background: #2db7f5;
  padding: 7px 16px;
  border-radius: 5px;
  color: #fff;
}

.btn-submit {
  background: #f5662d;
  padding: 7px 16px;
  border-radius: 5px;
  color: #fff;
  margin-right:15rpx;
}

.btn-explain {
  background: #23f5f5;
  padding: 7px 16px;
  border-radius: 5px;
  color: #fff;
  margin-right:15rpx;
}

.btn-clear-answer {
  background: #2366f583;
  padding: 7px 7px;
  border-radius: 5px;
  color: #fff;
  margin-right:10rpx;
  width:50rpx;
  height:40rpx;
  font-size:25rpx;

}

.txt-explain {
  margin-top:5%;
  padding-top:10rpx;
  border:1rpx;
  color:green;
  background-color:rgba(72, 255, 0, 0.068);
  border-style:solid;
  border-width:1rpx;
  margin-left:4%;
}


.txt-explain-right {
  color:green;
}

.txt-explain-wrong {
  color:red;
}

.clock-text {
  background:#fab9834b;
  padding:7rpx 16rpx;
  border-radius:5px;
  color:#fff;
  margin-right:10rpx;
  width:180rpx;
}

view.i-action-ico {
  display: flex;
  flex-wrap: wrap;
  padding: 6px;
}

view.i-action-ico-bor {
  width: 10%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

view.i-action-ico-bor>view {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  text-align: center;
  margin: 1px;
  background: #f8f8f8;
  border-radius: 5px;
  height: 30px;
}

view.i-action-ico-bor>view.err {
  color: #a01e32;
  background: #fba4b1;
}

view.i-action-ico-bor>view.succ {
  color: #3d971c;
  background: #b6f49f;
}

view.i-action-ico-bor>view.def {
  color: #18836b;
  background: #95e4d2;
}

.question-list {
  padding: 15px;
}

.question-list-title {
  font-size: 15px;
}

.question-title {
  margin-left: 8px;
  line-height: 25px;
}

.footer-defbtn {
  line-height: 22px;
  background-color: #fff;
  font-size: 14px;
  padding: 0;
}

.answer{
  padding:26rpx;
}
.answerTitle{
  color: #717171;
  font-size: 32rpx;
  margin-bottom: 26rpx;
}
.answerContent{
  font-size: 32rpx;
  margin-bottom: 26rpx;
}
